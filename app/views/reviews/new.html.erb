<div class="container">
  <div class="col-xs-6 offset-xs-4">
  <h2 class="text-center">Create new review</h2>
    <div class="row">
      <%= form_for [@restaurant, @review] do |form| %>
      <%= form.label :content %>
      <%= form.text_field :content, class: "form-control" %>
      <%= form.label :rating %>
      <%= form.text_field :rating, class: "form-control" %>
      <br>
      <%= form.submit class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>
