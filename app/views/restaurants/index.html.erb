<div class="container">
  <h1 class="heading">Restaurants</h1>
  <div class="restaurants">
    <p>Please select among the following restaurants!</p>

    <% @restaurants.each do |restaurant| %>
    <ul class="restaurant-list">
      <li><%= link_to restaurant.name, restaurant_path(restaurant), class: "large-link"%></li>

      <%= link_to "Edit", edit_restaurant_path(restaurant), class: "small-link"%>
      <%= link_to "Delete", restaurant_path(restaurant), method: :delete, class: "small-link"%>
    </ul>
    <% end %>

  </div>
</div>
